<% if @staff_member %>
  <h1><%= @staff_member.name %></h1>

  <p><em>Address:</em> <%= @staff_member.address %></br>
  <em>Email:</em> <%= @staff_member.email %></br>
  <em>Branch:</em> <%= @staff_member.branch.name %></p>
<% else %>
  <h1>Error</h1>
  <p>No staff member with that ID exists.</p>
<% end %>

<p><a href="/staff_members"><< Back to All Staff Members</a></p>
