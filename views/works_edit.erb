<h1>Edit Work - <%= @work.title %></h1>

<% if @work.errors.any? %>
  <p><% @work.errors.full_messages.each do |m| %>
    Error: <%= m %></br>
  <% end %></p>
<% end %>

<form action="/works/<%= @work.id %>" method="post">
  <p>Title: <input type="text", name="title", value="<%= @work.title %>"></br>
    Author: <input type="text", name="author", value="<%= @work.author %>"></br>
    ISBN: <input type="text", name="isbn", value="<%= @work.isbn %>"></br>
  <em>(Don't see the right branch listed? <a href="/branches/new">Enter a new one here</a>.)</em></p>
  <input type="submit" value="Update Work">
</form>
